<h3></h3>
<%= link_to ' New article', new_article_path, class: "btn btn-primary glyphicon glyphicon-plus-sign"%>
<br>
</br>
<br>
</br>
<div class="container panel panel-default">
  <h1 class="panel-heading">Listing Articles</h1>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td>
        <%= link_to 'Show', article_path(article), class: "btn btn-primary" %> | 
        <%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary glyphicon glyphicon-edit" %> | 
        <%= link_to 'Destroy', article_path(article), class: "btn btn-primary glyphicon glyphicon-trash",
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
</div>