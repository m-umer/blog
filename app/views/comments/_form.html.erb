<%= form_for([@article, @article.comments.build], remote: true) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <input type="submit" class="btn btn-primary" value="Create Comment">
  </p>
<% end %>